<?xml version="1.0" encoding="utf-8"?>
<com.lingtao.ltvideo.widgets.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StickyScrollViewActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@android:color/holo_blue_bright"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="zhang phil"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@android:color/holo_red_light"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:tag="sticky">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="top1"
                android:text="top1"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="top2"
                android:text="top2"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="top3"
                android:text="top3"
                android:textColor="@color/white" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>


</com.lingtao.ltvideo.widgets.StickyScrollView>